score = 0

#queston 1
answer=input('what is the capital of india \na.delhi \nb.hyderbad \nc.mumbai \nanswer:')
if answer == 'a' or answer=='delhi':
    score+=1
    print('correct answer')
    print('score ' , score)
    print('\n')
else :
    print("the correct answer is delhi")
    print('score' , score)
    print('\n')
